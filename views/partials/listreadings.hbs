<table class="ui table">
  <thead>
  <tr>
    <th>Code</th>
    <th>Temperature</th>
    <th>Wind Speed</th>
    <th>Wind Direction</th>
    <th>Pressure</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  {{#each station.readings}}
  <tr>
    <td>
     {{code}}
    </td>
    <td>
      {{temperature}}
    </td>
    <td>
      {{windspeed}}
    </td>
    <td>
      {{winddirection}}
    </td>
    <td>
      {{pressure}}
    <td>
      <a href="/station/{{../station.id}}/deletereading/{{id}}" class="ui tiny red icon button"><i class="trash alternate outline icon"></i></a>
    </td>
    </td>
  </tr>
  {{/each}}
  </tbody>
</table>